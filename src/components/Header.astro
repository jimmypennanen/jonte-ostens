---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { label: 'Hem', href: '/' },
  { label: 'Produkterna', href: '/produkterna' },
  { label: 'Jonte', href: '/jonte' },
  { label: 'Veckans ost', href: '/veckans-ost' },
  { label: 'Kontakt', href: '/kontakt' }
];
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-sm border-b border-light-green/30 shadow-sm">
  <div class="max-w-7xl mx-auto px-6 md:px-8 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 group">
      <span class="text-2xl md:text-3xl font-display font-bold text-dark-green group-hover:text-dark-brown transition-colors">
        ðŸ§€
      </span>
      <div>
        <div class="text-lg md:text-xl font-display font-bold text-dark-brown">
          Jontes
        </div>
        <div class="text-xs text-dark-green font-medium">
          Ostbutik
        </div>
      </div>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-8">
      {navItems.map(item => (
        <a
          href={item.href}
          class={`text-sm font-medium transition-colors ${
            currentPath === item.href
              ? 'text-dark-green underline'
              : 'text-dark-brown hover:text-dark-green'
          }`}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- Mobile Menu Button (can be expanded with JS later) -->
    <button class="md:hidden p-2 hover:bg-soft-yellow rounded-lg transition-colors">
      <svg class="w-6 h-6 text-dark-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
</header>
